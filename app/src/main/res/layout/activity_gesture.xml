<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="com.example.zhudi.touchscreengestures.GestureActivity">

    <com.example.zhudi.touchscreengestures.GestureView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gesture_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_btn"
            android:onClick="returnMainActivity"/>

        <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:onClick="clearGesture"/>
    </LinearLayout>

</FrameLayout>
